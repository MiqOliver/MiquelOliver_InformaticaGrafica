#version 330 core

in vec3 position;
in vec3 color;
in vec2 texCoord;

out vec3 Color;
out vec2 TexCoord;

uniform mat4 model;
uniform mat4 auxModel;
uniform mat4 view;
uniform mat4 proj;
uniform int control;

void main(){
    gl_Position = proj * view * auxModel * vec4(position, 1.0);
	if(control == 1)
		gl_Position = proj * view * model * vec4(position, 1.0);

	Color = color;
    TexCoord = texCoord;
}